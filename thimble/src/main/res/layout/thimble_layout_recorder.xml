<?xml version="1.0" encoding="utf-8"?>
<com.infinum.thimble.ui.views.recorder.RecorderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/thimble_recorder_height">

    <LinearLayout
        android:animateLayoutChanges="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/thimble_background_recorder"
        android:divider="@drawable/thimble_divider_recorder"
        android:orientation="horizontal"
        android:padding="2dp"
        android:showDividers="middle">

        <ImageButton
            android:id="@+id/screenshotButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/thimble_background_button_screenshot"
            android:src="@drawable/thimble_ic_screenshot" />

        <ImageButton
            android:id="@+id/videoButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/thimble_background_button_video"
            android:src="@drawable/thimble_ic_video" />

        <ImageView
            android:id="@+id/dragHandle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/thimble_background_button_recorder"
            android:padding="12dp"
            android:src="@drawable/thimble_ic_drag" />

    </LinearLayout>

</com.infinum.thimble.ui.views.recorder.RecorderView>