<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/thimble_activity_thimble">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/thimble_card_margin"
        app:cardCornerRadius="@dimen/thimble_card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/gridOverlaySwitch"
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeightSmall"
                android:layout_marginStart="@dimen/thimble_title_margin"
                android:layout_marginEnd="@dimen/thimble_title_margin"
                android:enabled="false"
                android:text="@string/thimble_overlay_title_grid"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thimble_description_margin"
                android:layout_marginTop="@dimen/thimble_description_margin"
                android:layout_marginEnd="@dimen/thimble_description_margin"
                android:text="@string/thimble_overlay_description_grid"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thimble_section_title_margin"
                android:layout_marginTop="@dimen/thimble_section_title_margin_top"
                android:layout_marginEnd="@dimen/thimble_section_title_margin"
                android:text="@string/thimble_overlay_section_title_colors"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thimble_section_option_margin"
                android:layout_marginTop="@dimen/thimble_section_option_margin_top"
                android:layout_marginEnd="@dimen/thimble_section_option_margin"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/thimble_section_option_margin_end"
                    android:layout_weight="1"
                    android:text="@string/thimble_overlay_option_title_horizontal"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/horizontalLineColorValueLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/thimble_section_option_margin_start"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/horizontalLineColorButton"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thimble_section_option_margin"
                android:layout_marginEnd="@dimen/thimble_section_option_margin"
                android:enabled="false"
                app:cornerRadius="@dimen/thimble_button_corner_radius"
                app:icon="@drawable/thimble_ic_pick"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:strokeColor="?android:textColorSecondary"
                app:strokeWidth="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thimble_section_option_margin"
                android:layout_marginTop="@dimen/thimble_section_option_margin_top"
                android:layout_marginEnd="@dimen/thimble_section_option_margin"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/thimble_section_option_margin_end"
                    android:layout_weight="1"
                    android:text="@string/thimble_overlay_option_title_vertical"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/vertialLineColorValueLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/thimble_section_option_margin_start"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/verticalLineColorButton"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thimble_title_margin"
                android:layout_marginEnd="@dimen/thimble_title_margin"
                android:enabled="false"
                app:cornerRadius="@dimen/thimble_button_corner_radius"
                app:icon="@drawable/thimble_ic_pick"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:strokeColor="?android:textColorTertiary"
                app:strokeWidth="1dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thimble_section_title_margin"
                android:layout_marginTop="@dimen/thimble_section_title_margin_top"
                android:layout_marginEnd="@dimen/thimble_section_title_margin"
                android:text="@string/thimble_overlay_section_title_gap"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thimble_section_option_margin"
                android:layout_marginTop="@dimen/thimble_section_option_margin_top"
                android:layout_marginEnd="@dimen/thimble_section_option_margin"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/thimble_section_option_margin_end"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/thimble_overlay_option_title_horizontal"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/horizontalGridSizeValueLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/thimble_section_option_margin_start"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/decreaseHorizontalGridSizeButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="@dimen/thimble_gap_button_size"
                    android:layout_height="@dimen/thimble_gap_button_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/thimble_gap_button_margin"
                    android:layout_marginEnd="@dimen/thimble_gap_button_margin"
                    android:enabled="false"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="@dimen/thimble_gap_button_corner_radius"
                    app:icon="@drawable/thimble_ic_minus"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/horizontalGridSizeSlider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:stepSize="1"
                    app:haloRadius="@dimen/thimble_slider_halo_radius"
                    app:thumbRadius="@dimen/thimble_slider_thumb_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/increaseHorizontalGridSizeButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="@dimen/thimble_gap_button_size"
                    android:layout_height="@dimen/thimble_gap_button_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/thimble_gap_button_margin"
                    android:layout_marginEnd="@dimen/thimble_gap_button_margin"
                    android:enabled="false"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="@dimen/thimble_gap_button_corner_radius"
                    app:icon="@drawable/thimble_ic_plus"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:strokeWidth="0dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thimble_section_option_margin"
                android:layout_marginTop="@dimen/thimble_section_option_margin_top"
                android:layout_marginEnd="@dimen/thimble_section_option_margin"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/thimble_section_option_margin_end"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/thimble_overlay_option_title_vertical"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/verticalGridSizeValueLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/thimble_section_option_margin_start"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/thimble_card_last_item_margin_bottom"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/decreaseVerticalGridSizeButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="@dimen/thimble_gap_button_size"
                    android:layout_height="@dimen/thimble_gap_button_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/thimble_gap_button_margin"
                    android:layout_marginEnd="@dimen/thimble_gap_button_margin"
                    android:enabled="false"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="@dimen/thimble_gap_button_corner_radius"
                    app:icon="@drawable/thimble_ic_minus"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:strokeWidth="0dp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/verticalGridSizeSlider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:stepSize="1"
                    app:haloRadius="@dimen/thimble_slider_halo_radius"
                    app:thumbRadius="@dimen/thimble_slider_thumb_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/increaseVerticalGridSizeButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="@dimen/thimble_gap_button_size"
                    android:layout_height="@dimen/thimble_gap_button_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/thimble_gap_button_margin"
                    android:layout_marginEnd="@dimen/thimble_gap_button_margin"
                    android:enabled="false"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="@dimen/thimble_gap_button_corner_radius"
                    app:icon="@drawable/thimble_ic_plus"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:strokeWidth="0dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>